<div class="container">
  <h1 class="my-3">Restaurant List 🍖</h1>
  <p><%= link_to 'Add new restaurant', new_restaurant_path %></p>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card mb-3 shadow">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category_capitalized %></h6>
            <p class="card-text">📍 <%= restaurant.address %></p>
            <p class="card-text"><%= restaurant.phone_number %></p>
            <%= link_to 'Details', restaurant_path(restaurant), class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
