<div class="container">
  <h1 class="my-3">Restaurant List</h1>
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card mb-3 shadow d-flex">
          <div class="card-image">
            <img src="https://picsum.photos/400/600" />
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= restaurant.category_capitalized %> - 📞<%= restaurant.phone_number %></h6>
            <p class="card-text">📍 <%= restaurant.address %></p>
            <%= link_to 'Details', restaurant_path(restaurant), class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
