<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://picsum.photos/1600/2400);">
  <div class="container">
    <h1 class="mb-2"><%= @restaurant.name %></h1>
    <p><%= @restaurant.category_capitalized %></p>
    <p>📍 <%= @restaurant.address %></p>
    <p>📞 <%= @restaurant.phone_number %></p>
  </div>
</div>
<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="card mb-3 shadow p-3">
        <%# <%= render 'form', restaurant: @restaurant, review: @review %>
        <h5 class="mb-2">Reviews</h5>
        <% if @restaurant.reviews.present? %>
          <ul class="list-group mb-5">
            <% @restaurant.reviews.each do |review| %>
              <li class="list-group-item"><%= '⭐️' * review.rating %> - <%= review.content %></li>
            <% end %>
          </ul>
        <% else %>
          <p>No reviews added yet</p>
        <% end %>
        <h5>Leave a review:</h5>
        <%= simple_form_for [ @restaurant, @review ] do |f| %>
          <%= f.input :rating, placeholder: "1-5" %>
          <%= f.input :content %>
          <%= f.submit "Submit", class: "btn btn-outline-primary mb-3" %>
        <% end %>
        <%= link_to "Back to Restaurant List", restaurants_path, class: "btn btn-outline-primary mt-3" %>
      </div>
    </div>
  </div>
</div>
